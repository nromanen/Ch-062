@model WebApp.ViewModels.ChangeEmailViewModel

@{
    ViewData["Title"] = "ChangeEmail";
}
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedRes> SharedLocalizer

<h2>@SharedLocalizer["ChangeEmail"]</h2>

<h4>@SharedLocalizer["YourEmail"] @Model.OldEmail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NewEmail" class="control-label">@SharedLocalizer["NewEmail"] </label>
                <input type="email" asp-for="NewEmail" class="form-control" />
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">@SharedLocalizer["Password"]</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Save"] class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


