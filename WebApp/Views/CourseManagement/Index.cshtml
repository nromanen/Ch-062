@model IEnumerable<Model.DTO.CourseDTO>
@{
    ViewBag.Title = "Course List";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer

@if (User.IsInRole("Teacher"))
{
    <a asp-action="Create" class="btn btn-sm btn-primary">@SharedLocalizer["Addcourse"]</a>
    <a asp-action="ViewCourses" class="btn btn-sm btn-primary">@SharedLocalizer["Mycourses"]</a>
}


<table class="table">
    <tr>
        <th>@SharedLocalizer["CourseName"]</th>
        <th>@SharedLocalizer["CreateDate"]</th>
    </tr>
    
    @if (User.IsInRole("Teacher") || User.IsInRole("Administrator"))
    {
        foreach (var course in Model)
        {
            <tr>
                <td> <a style="color: #0800ff;" asp-action="ShowExercise" asp-route-id="@course.Id">@course.Name</a></td>
                <td>@course.CreationDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@course.Id" method="post">
                        @if (User.IsInRole("Administrator"))
                        {
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@course.Id">@SharedLocalizer["Change"]</a>
                            <a class="btn btn-sm btn-primary" asp-action="ChangeOwner" asp-route-id="@course.Id">@SharedLocalizer["Changecourseowner"]</a>
                            if (course.IsActive)
                            {
                                <a class="btn btn-sm btn-danger" asp-action="Suspend" asp-route-id="@course.Id">@SharedLocalizer["Delete"]</a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-primary" asp-action="Suspend" asp-route-id="@course.Id">@SharedLocalizer["Recover"]</a>
                            }
                        }
                    </form>                  
                </td>
            </tr>
        }
    }
    else
    {
        @foreach (var course in Model)
        {
            if (course.IsActive)
            {
                <tr>
                    <td>@course.Name</td>
                    <td>@course.CreationDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@course.Id" method="post"></form>
                    </td>
                </tr>
            }
        }
    }
</table>