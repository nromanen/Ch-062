@model IEnumerable<Model.DTO.ExerciseDTO>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer
<form asp-action="ShowExercise" asp-controller="CourseManagement">
    <div asp-validation-summary="All" class="text-danger"></div>

    <table class="table">
        <tr>
            <th> @SharedLocalizer["TaskName"] </th>
        </tr>

        @foreach (var p in Model)
        {
            <tr>
                <td>@p.TaskName</td>

                <td>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <form method="post">
                                <a class="btn btn-sm btn-primary" asp-controller="ExerciseManagement" asp-action="TaskView" asp-route-id="@p.Id">@SharedLocalizer["Tasks"]</a>
                            </form>
                        }
                    }
                </td>
            </tr>
        }

    </table>


</form>

