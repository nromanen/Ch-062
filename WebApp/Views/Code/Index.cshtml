@model Model.DTO.CodeDTO.UserCodeDTO

<style type="text/css">

    
</style>


<div class="row block2">

    <div>
        <div class="col-md-12">
            <div class="row" style="height: 100%; padding: 20px; border-color: black; border: 1px solid;">
                <div class="col-md-12">
                    <div class="row" style="padding: 10px">Exercise name: @Model.Exercise.TaskName</div>
                    <div class="row" style="padding: 10px">Exercise point: @Model.Exercise.TaskTextField</div>
                </div>
            </div>
            <br/>
            <div>
                <div class="row" style=" height: 100%">
                    <div class="col-md-12">
                        <textarea id="codeText" class="col-md-12 textField" style="height: 100%; width: 100%; "></textarea>
                        <br />
                        <button type="button" id="executeButton" class="btn btn-default"> Execute </button>


                    </div>
                </div>
            </div>
            <br />
            <div class="row" style=" height: 150px; ">
                <div id="result" style="padding: 10px; border-color: black; border: 1px solid; height: 100%"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/codemirror.css" />
    <script src="~/js/codemirror.js"></script>
    <script src="~/js/matchbrackets.js"></script>
    <script src="~/js/continuecomment.js"></script>
    <script src="~/js/clike.js"></script>
    <script>
        $(document).ready(function() {
            $('#codeText').html('@Model.CodeText');
        });

        var editableCodeMirror = null;
        window.onload = function () {
            editableCodeMirror = CodeMirror.fromTextArea(document.getElementById('codeText'), {
                mode: "text/x-csrc",
                theme: "default",
                lineNumbers: true
            });

        };

        $('#executeButton').click(
            function() {
                console.log("start");

                var userCode = new Object();
                userCode.CodeText = editableCodeMirror.getValue();
                console.log(userCode.CodeText);
                userCode.ExerciseId = ('@Model.ExerciseId');
                userCode.UserId = ('@Model.UserId');

                $.ajax({
                    type: "POST",
                    url: "/Code/GetCode",
                    data: userCode,
                    success: function(data) {
                        $("#result").html(data);
                    }
                });

            }
        );
    </script>
}

