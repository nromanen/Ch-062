@using Microsoft.AspNetCore.Mvc.Localization
@model Model.DTO.CodeDTO.UserCodeDTO
@using Model.Entity;
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer

<style type="text/css">
</style>


@if (Model.CodeStatus == CodeStatus.Done)
{
    <div class="row">
        <div class="col-md-1"></div>
        @if (Model.Mark == 0)
        {
            <div class="col-md-10" style="background-color: #fff8c4; height: 70px; border: 1px solid; border-color: #ffc126; ">
                <h5>Your Solution in on review now. Please, wait for result...</h5>
            </div>
        }
        else
        {
            if (Model.Mark > 50)
            {
                <div class="col-md-10" style="background-color: #a3ff9b; height: 205px; border: 1px solid; border-color: #37ff26; ">
                    <h5>Congrats! Your result is pretty good! Your mark: @Model.Mark</h5>
                    @if (Model.TeachersComment != null)
                    {
                        <label class="control-label">Teachers Comment</label>
                        <textarea asp-for="@Model.TeachersComment" style="width: 100%;" id="MCE" class="form-control"></textarea>
                    }
                </div>
            }
            else
            {
                <div class="col-md-10" style="background-color: #ffaaaa; height: 205px; border: 1px solid; border-color: #ff2121; ">
                    <h5>Sorry, you tied but not good enough... Your mark: @Model.Mark</h5>
                    @if (Model.TeachersComment != null)
                    {
                        <label class="control-label">Teachers Comment</label>
                        <textarea asp-for="@Model.TeachersComment" style="width: 100%; " id="MCE" class="form-control"></textarea>
                    }
                </div>
            }

        }
    </div>
}
<div style="clear: both;">
    <br />
</div>

<div class="row block2">

    <div>
        <div class="col-md-12">
            <div class="row" style="height: 100%; padding: 20px; border-color: black; border: 1px solid; background-color: white">
                <div class="col-md-12">
                    <div class="row" style="padding: 10px">@SharedLocalizer["Exercisetitle"]: @Model.Exercise.TaskName</div>
                    <div class="row" style="padding: 10px">@SharedLocalizer["Task"]: @Model.Exercise.TaskTextField</div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-9">
                    <textarea id="codeText" class="col-md-12 textField" style="height: 100%; width: 100%; "></textarea>


                </div>
                <div class="col-md-3" style="height: 650px">
                    <textarea id="result" style="padding: 10px; border-color: black; border: 1px solid; height: 100%; width: 100%; background-color: white" readonly="readonly"></textarea>
                    <br />
                    <br />
                    <button type="button" id="executeButton" class="btn btn-default"> @SharedLocalizer["Execute"] </button>
                    @*<button type="button" id="reloadButton" class="btn btn-default"> @SharedLocalizer["Reload"] </button>*@
                    <button type="button" id="exit" class="btn btn-default" onclick='location.href = "@Url.Action("Index", "Home")"'> @SharedLocalizer["Exit"] </button>

                </div>

            </div>
            <br />
            <button type="button" id="done" class="btn btn-default"> Done </button>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/codemirror.css" />
    <script src="~/js/codemirror.js"></script>
    <script src="~/js/matchbrackets.js"></script>
    <script src="~/js/continuecomment.js"></script>
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script src="~/js/clike.js"></script>
    <script>
        $(document).ready(function() {
            $('#codeText').html('@Model.CodeText');
            tinymce.init({ selector: '#MCE', menubar: false, toolbar: false });
        });


        var editableCodeMirror = null;
        window.onload = function () {
            editableCodeMirror = CodeMirror.fromTextArea(document.getElementById('codeText'), {
                mode: "htmlmixed",
                theme: "default",
                lineNumbers: true
            });

            editableCodeMirror.on('change', function (cMirror) {  //(cMirror)
                $('#result').html('');

                //console.log(cMirror.getValue());

                var userCode = new Object();
                userCode.CodeText = editableCodeMirror.getValue();
                userCode.ExerciseId = ('@Model.ExerciseId');
                userCode.UserId = ('@Model.UserId');

                var checkasync = false;


                $.ajax({
                    type: "POST",
                    url: "/Code/ExecuteCode",
                    data: userCode,
                    success: function(data) {

                        $("#result").html(data);
                        checkasync = true;

                    }

                });


                 });


            editableCodeMirror.setOption("mode", "text/x-csrc");

        };
        $('#done').click(
            function () {

                var model = new Object();
                model.CodeText = editableCodeMirror.getValue();
                model.UserId =('@Model.UserId');
                model.ExerciseId = ('@Model.ExerciseId');

                $.ajax({

                    type: "POST",
                    url: "/Code/SetCodeStatus",
                    data: model
                });
            });


        $('#reloadButton').click(function () {

            editableCodeMirror.setValue('@Model.CodeText');
        });

        $('#executeButton').click(
            function () {
                $('#result').html('');
                console.log("start");

                var userCode = new Object();
                userCode.CodeText = editableCodeMirror.getValue();
                userCode.ExerciseId = ('@Model.ExerciseId');
                userCode.UserId = ('@Model.UserId');

                $.ajax({
                    type: "POST",
                    url: "/Code/GetCode",
                    data: userCode,
                    success: function(data) {
                        $("#result").html(data);
                    }
                });

            }
        );



    </script>
}

