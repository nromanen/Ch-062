@model WebApp.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedRes> SharedLocalizer
<style>
    li {
        color: black;
    }
</style>
<h2>
    @SharedLocalizer["Login"]</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email">
            @SharedLocalizer["Email"]
        </label><br />

        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">
            @SharedLocalizer["Password"]
        </label><br />

        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe">
            @SharedLocalizer["RememberMe?"]
        </label><br />

        <input asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value="@SharedLocalizer["SignIn"]" />
    </div>
</form>
