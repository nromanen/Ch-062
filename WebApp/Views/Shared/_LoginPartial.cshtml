@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedRes> SharedLocalizer
<<li>
    @await Html.PartialAsync("_SelectLanguagePartial")
</li>
@if (User.Identity.IsAuthenticated)
{
    <li>@Html.ActionLink(@User.Identity.Name, "Index", "Home")</li>

    <li>
        <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
            <button type="submit" class="btn btn-link navbar-btn navbar-link">@SharedLocalizer["SignOut"]</button>

        </form>
        <form asp-area="" asp-controller="User" asp-action="Index" class="navbar-right">

            <button type="submit" class="btn btn-link navbar-btn navbar-link">@SharedLocalizer["MyProfile"] </button>

        </form>
    </li>
}
else
{
    <li><a asp-controller="Account" asp-action="Login">@SharedLocalizer["SignIn"]</a></li>

    <li>
        <a asp-controller="Account" asp-action="Register">
            @SharedLocalizer["SignUp"]
        </a>
    </li>
}
