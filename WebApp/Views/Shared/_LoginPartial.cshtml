

@if (User.Identity.IsAuthenticated)
{
    <li>@Html.ActionLink(@User.Identity.Name, "Index", "Home")</li>

    <li>
        <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
            <button type="submit" class="btn btn-link navbar-btn navbar-link">logout</button>
        </form>
        <form asp-area="" asp-controller="User" asp-action="Index" class="navbar-right">
            
            <button type="submit" class="btn btn-link navbar-btn navbar-link">My Profile </button>
        </form>
    </li>  
}
else
{
    <li><a asp-controller="Account" asp-action="Login">Вход</a></li>
    <li><a asp-controller="Account" asp-action="Register">Регистрация</a></li>
}