@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedRes> SharedLocalizer
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/component.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>@ViewData["Title"] - WebApp</title>

    <style>
        a:hover {
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div>
        <ul id="gn-menu" class="gn-menu-main navbar-fixed-top">
            <li class="gn-trigger">
                <a class="gn-icon gn-icon-menu"><span>Menu</span></a>
                <nav class="gn-menu-wrapper">
                    <div class="gn-scroller">
                        <ul class="gn-menu">
                            @if (User.IsInRole("Administrator"))
                            {
                                <li>
                                    <a class="gn-icon gn-icon-cog" asp-controller="AdminPanel" asp-action="Users">
                                        @SharedLocalizer["AdminPanel"]
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Teacher"))
                            {
                                <li>
                                    <a class="gn-icon gn-icon-cog" asp-controller="ExerciseManagement" asp-action="Index">
                                        @SharedLocalizer["Tasks"]
                                    </a>
                                </li>
                            }
                            <li><a class="gn-icon gn-icon-cog" asp-controller="CourseManagement" asp-action="Index">@SharedLocalizer["Courses"]</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {

                                <li><a class="gn-icon gn-icon-cog" asp-controller="CodeHistory" asp-action="History">@SharedLocalizer["CodeHistory"]</a></li>

                            }
                        </ul>
                    </div>
                </nav>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 20px">@SharedLocalizer["SoftServe"]</a>

            </li>
            @await Html.PartialAsync("_LoginPartial")
        </ul>
        <header></header>

        <div class="container body-content" style="margin-top: 30px">
            @RenderBody()

        </div>
    </div>

    <script src="~/js/modernizr.custom.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/classie.js"></script>
    <script src="~/js/gnmenu.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        new gnMenu(document.getElementById('gn-menu'));
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
