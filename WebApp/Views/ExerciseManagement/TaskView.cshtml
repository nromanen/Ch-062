@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer

@model Model.DTO.ExerciseDTO
@{
    ViewBag.Title = "Task View";
}

<script src="~/js/katex.min.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/highlight.min.js"></script>
<script src="~/js/quill.js"></script>

<link href="~/css/monokai-sublime.min.css" rel="stylesheet" />
<link href="~/css/katex.min.css" rel="stylesheet" />
<link href="~/css/quill.bubble.css" rel="stylesheet" />
<link href="~/css/quill.snow.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" />


<form asp-action="TaskView" asp-controller="ExerciseManagement">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="TaskName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="control-label">@SharedLocalizer["Task"]:</label>
        <div id="editor-container" class="form-control"></div>
    </div>
    <label asp-for="TaskBaseCodeField" class="control-label">@SharedLocalizer["BaseCode"]:</label>
    <textarea asp-for="TaskBaseCodeField" class="col-md-12" style="height: 400px; width: 100%;" readonly></textarea>
    <br />
        <div class="col-md-2" >
            <input value="@SharedLocalizer["Ok"]" onClick="history.go(-1)" ; class="btn btn-default" />
        </div>

</form>
<div class="col-md-2" style="margin-left: 10px ">
    <form asp-controller="Code" asp-action="Index">
        <input type="hidden" name="UserId" value="@User.Identity.Name" />
        <input type="hidden" name="ExerciseId" value="@Model.Id" />
        <input type="hidden" name="CodeText" value="@Model.TaskBaseCodeField" />
        <button type="submit" class="btn btn-default">@SharedLocalizer["Try"]</button>
    </form>
</div>


<script>
    var quill = new Quill('#editor-container', { theme: 'snow' });
</script>