@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer

@model WebApp.ViewModels.GetExerciseViewModel;
@{
    ViewBag.Title = "Task View";
}

<link rel="stylesheet" href="~/css/codemirror.css" />
<link rel="stylesheet" href="~/css/SimpleStarRating.css">
<script src="~/js/codemirror.js"></script>
<script src="~/js/matchbrackets.js"></script>
<script src="~/js/continuecomment.js"></script>
<script src="~/js/clike.js"></script>
<script src="~/js/tinymce.min.js"></script>


<form asp-action="TaskView" asp-controller="ExerciseManagement">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" id="TaskId" value="@Model.Id" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="TaskName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="control-label">@SharedLocalizer["Task"]:</label>
        <textarea asp-for="TaskTextField" id="MCE"></textarea>
    </div>
    <label asp-for="TaskBaseCodeField" class="control-label">@SharedLocalizer["BaseCode"]:</label>
    <textarea asp-for="TaskBaseCodeField" class="col-md-12" style="height: 400px; width: 100%;" readonly></textarea>
    <div class="form-group">
        <input value="@SharedLocalizer["Ok"]" onClick="history.go(-1)" ; class="btn btn-default" />
    </div>
    <br />

    <div>
        <table class="table">
            <tr>
                <td>User</td>
                <td>Comment</td>
                <td>Rate</td>
                <td>Written</td>
            </tr>
            @foreach (var comment in Model.CommentList)
            {

                <tr>
                    <td>@comment.UserName</td>
                    <td>@comment.CommentText</td>
                    <td><span class="rating" data-default-rating=@comment.Rating disabled></span></td>
                    <td>@comment.CreationDateTime</td>
                </tr>
            }
        </table>
    </div>

    <div>
        <label class="control-label">Comment text:</label>
        <input type="text" id="textField" class="form-control" />
        <label class="control-label">Rate Field:</label>
        <input type="text" id="rateField" class="form-control" />
        <button id="button" class="btn btn-default">Comment it</button>
    </div>
</form>
<br />
<div class="col-md-2">
    <form asp-controller="Code" asp-action="Index">
        <input type="hidden" name="UserId" value="@User.Identity.Name" />
        <input type="hidden" name="ExerciseId" value="@Model.Id" />
        <input type="hidden" name="CodeText" value="@Model.TaskBaseCodeField" />
        <button type="submit" class="btn btn-default">Start</button>
    </form>

</div>

@section Scripts {

    <script>

        tinymce.init({ selector: '#MCE' });

        window.onload = function () {
            var editableCodeMirror = CodeMirror.fromTextArea(document.getElementById('taskBaseCodeField'), {
                mode: "text/x-csrc",
                theme: "default",
                lineNumbers: true
            });

        };


        $('#button').click(
            function () {
                var comment = new Object();
                comment.ExerciseId = $('#TaskId').val();
                comment.Rating = $('#rateField').val();
                comment.CommentText = $('#textField').val();

                $.ajax({
                    type: "POST",
                    url: "/Comment/Create",
                    data: comment
                });

            });

        var ratings = document.getElementsByClassName('rating');

        for (var i = 0; i < ratings.length; i++) {
            var r = new SimpleStarRating(ratings[i]);

            ratings[i].addEventListener('rate', function (e) {
                console.log("start " + e.detail);
                console.log('Rating: ' + e.detail);

            });

    </script>
}
