@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer

@model IEnumerable<Model.DTO.CourseDTO>
@{
    ViewBag.Title = "Add Task";
}
<form asp-action="Create" asp-controller="ExerciseManagement" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">

        <label name="CourseId" class="control-label">@SharedLocalizer["CourseName"] *</label>
        <select name="CourseId", asp-items="@(new SelectList(Model,"Id","Name"))" class="form-control" required></select>
        <label name="TaskName" class="control-label">@SharedLocalizer["TaskName"] *</label>
        <input type="text" name="TaskName" class="form-control" required />
    </div>
    <div class="form-group">
        <label name="TaskName" class="control-label">@SharedLocalizer["Task"]:</label>
        <input type="text" name="TaskString" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="@SharedLocalizer["Add"]" class="btn btn-default" />
    </div>
</form>

<br />
<h6>@SharedLocalizer["Required"]</h6>