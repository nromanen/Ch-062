@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer

@model WebApp.ViewModels.CreateExerciseViewModel;
@{
    ViewBag.Title = "Add Task";
}
<link rel="stylesheet" href="~/css/codemirror.css" />
<script src="~/js/codemirror.js"></script>
<script src="~/js/matchbrackets.js"></script>
<script src="~/js/continuecomment.js"></script>
<script src="~/js/clike.js"></script>
<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<script src="~/js/jquery.min.js"></script>
<link rel="stylesheet" href="~/css/site.css" />

<form asp-action="Create" asp-controller="ExerciseManagement" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">

        <label class="control-label">@SharedLocalizer["CourseName"] *</label>
        <select asp-for="CourseId" asp-items="@(new SelectList(Model.CourseList, "Id" , "Name"))" class="form-control" required></select>
        <label class="control-label">@SharedLocalizer["TaskName"] *</label>
        <input asp-for="TaskName" type="text" class="form-control" required />
    </div>
    <div class="form-group">
        <label class="control-label">@SharedLocalizer["Task"]:</label>
        <textarea asp-for="TaskTextField" id="MCE"></textarea>
    </div>
    <div class="row">
        <div class=" col-md-6">
            <label class="control-label">@SharedLocalizer["BaseCode"]:</label>
            <textarea asp-for="TaskBaseCodeField" id="taskBaseCodeField" class="col-md-12" style="height: 400px; width: 100%;"></textarea>
        </div>

        <div>
            <label class="control-label">@SharedLocalizer["TestCasesCode"]:</label>
            <textarea asp-for="TestCases" id="testCasesCodeField" class="col-md-12" style="height: 400px; width: 100%;"></textarea>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">@SharedLocalizer["Add"]</button>
    </div>
</form>


<br />
<h6>@SharedLocalizer["Required"]</h6>

<script>

    tinymce.init({ selector: '#MCE' });


    window.onload = function () {
        var editableCodeMirror = CodeMirror.fromTextArea(document.getElementById('taskBaseCodeField'), {
            mode: "text/x-csrc",
            theme: "default",
            lineNumbers: true
        });
        var editableTestCasesCodeMirror = CodeMirror.fromTextArea(document.getElementById('testCasesCodeField'), {
            mode: "text/x-csrc",
            theme: "default",
            lineNumbers: true
        });
    };
</script>